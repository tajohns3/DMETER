<div class="nested-fields">
  <table class="table table-bordered">
    <tbody>
    </tbody>
    <thead>
    <tr>
      <th class="text-center">
        Crop
      </th>
      <th class="text-center">
        Acreage
      </th>
      <th class="text-center">
        Unit
      </th>
      <th class="text-center">
        Irrigation Source
      </th>
    </tr>
    <tr>
      <th class="text-center">
        <div class="form-group">
          <%= f.collection_select :crop_id, Crop.all, :id, :crop, {:include_blank => true}, {class: "form-control"} %>
        </div>
      </th>
      <th class="text-center">
        <div class="form-group">
          <%= f.text_field :acreage, class: "form-control" %>
        </div>
      </th>
      <th class="text-center">
        <div class="form-group">
          <%= f.select :unit, [['Bigha'],['Guntha(Ares)'],['Acres'],['Hectares']], {:include_blank => true}, {class: "form-control"}   %>
        </div>
      </th>
      <th class="text-center">
        <div class="form-group">
          <%= f.select :irr_source, [['Surface Water'],['Ground Water'],['Rainfall']], {:include_blank => true}, {class: "form-control"}   %>
        </div>
      </th>
    </tr>
    </thead>
  </table>
  <%= link_to_remove_association "Remove", f, class: "btn btn-danger pull-right",:style=>'color:#FFFFFF'%>
</table>
</div>