<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Sur name</th>
      <th>Phone</th>
      <th>Location</th>
      <th>User name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.sur_name %></td>
        <td><%= user.phone %></td>
        <td><%= user.location %></td>
        <td><%= user.user_name %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user %></td>
        <% if current_user.access?%>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <%end%>
        <% if current_user.admin?%>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>

            <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

