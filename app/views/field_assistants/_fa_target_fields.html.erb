<div class="nested-fields">
  <div class="row">
    <div class="col-md-12 text-center">
      <table class="table table-bordered">
        <tbody>
        <tr>
          <th class="text-center">
            Dealer&nbsp;
            <br>
            Name
          </th>
          <th class="text-center">
            Number of
            <br>
            Villages
          </th>
          <th class="text-center">
            Crops
          </th>
          <th class="text-center">
            Start&nbsp;
            <br>
            Date
          </th>
          <th class="text-center">
            End
            <br>
            Date
          </th>
          <th class="text-center">
            Total&nbsp;
            <br>
            Months
          </th>
          <th class="text-center">
            Number of
            <br>
            Samples
          </th>
          <th class="text-center">
            Number of
            <br>
            Demos
          </th>
          <th class="text-center">
            Number of
            <br>
            Farmer Meetings
          </th>
          <th class="text-center">
            Number of
            <br>
            Prescriptions
          </th>
        </tr>
        <tr class="info">
          <td>
            <div class="form-group">
              <select class="form-control">
                <option value="pizza">
                  Pizza
                </option>
                <option value="salad">
                  Salad
                </option>
                <option value="pizzasalad">
                  Pizza and Salad
                </option>
              </select>
            </div>
          </td>
          <td>
            <div class="form-group">
              <%= f.number_field :village_number, {class: "form-control"} %>
            </div>
          </td>
          <td>
            <div class="form-group">
              <%= f.collection_select :crop_id, Crop.all, :id, :crop, {:include_blank => true}, class: "form-control" %>
            </div>
          </td>
          <td>
            <%= f.text_field :start_date, 'data-behaviour' => 'datepicker', class: "form-control" %>
          </td>
          <td>
            <%= f.text_field :end_date, 'data-behaviour' => 'datepicker', class: "form-control" %>
          </td>
          <td>
            <div class="form-group">
              <%= f.number_field :total_month, {class: "form-control"} %>
            </div>
          </td>
          <td>
            <div class="form-group">
              <%= f.number_field :sample_number, {class: "form-control"} %>
            </div>
          </td>
          <td>
            <div class="form-group">
              <%= f.number_field :demo_number, {class: "form-control"} %>
            </div>
          </td>
          <td>
            <div class="form-group">
              <%= f.number_field :farmer_number, {class: "form-control"} %>
            </div>
          </td>
          <td>
            <div class="form-group">
              <%= f.number_field :prescription_number, {class: "form-control"} %>
            </div>
          </td>
        </tr>
        </tbody>
      </table>
          <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4 text-center">
              <%= link_to_remove_association "Remove", f, class: "btn btn-danger",:style=>'color:#FFFFFF'%>
            </div>
            <div class="col-md-4 text-center">
            </div>
          </div>
      <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4 text-center">
        </div>
        <div class="col-md-4 text-center">
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4 text-center">
        </div>
        <div class="col-md-4 text-center">
        </div>
      </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    $('[data-behaviour~=datepicker]').datepicker({
      format: 'yyyy-mm-dd'
    });
  </script>
</div>
