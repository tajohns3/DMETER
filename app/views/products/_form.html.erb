<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

    <div class="field">
      <%= f.fields_for :product_singles do |ps|%>
      <%= render 'product_single_fields', f: ps%>
          <%end%>
    </div>
    <div class="links">
      <%=link_to_add_association 'Add single ', f, :product_singles%>
    </div>

    <div class="field">
      <%=f.fields_for :product_boxes do |pb|%>
      <%=render 'product_box_fields', f: pb%>
          <%end%>
      <div class="links">
        <%=link_to_add_association 'Add box ', f, :product_boxes%>
      </div>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
