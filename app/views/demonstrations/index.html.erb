
<%= will_paginate%>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading ">
      <h1 class="panel-title ">
        <b> Demonstrations</b>
      </h1>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-12">
          <table class="table table-bordered">
            <tbody>
            <tr>
              <th class="text-center">
                Demonstration Code
              </th>
              <th class="text-center">
                Application Done by
              </th>

              <th class="text-center">
                Demo status
              </th>
              <th class="text-center">
                Field Assistant
              </th>
              <th class="text-center">
                <%= link_to 'New Demonstration', new_fa_activity_path, 'data-no-turbolink' => true, class: "btn btn-success",:style=>'color:#FFFFFF'%>
              </th>
            </tr>
            <tr>
              <% @demonstrations.each do |demonstration| %>
                  <td class="text-center">
                    <%= demonstration.demo_code  %>
                  </td>
                  <td class="text-center">
                    <% demonstration.applications.each do |appby|%>
                    <%=appby.application_by%>
                        <%end%>
                  </td>
                  <td class="text-center">
                    <%= demonstration.demo_status.humanize.titleize %>
                  </td>
                  <td class="text-center">
                    <%= demonstration.position.surname  %>
                  </td>
                  <td class="text-center">
                    <%= link_to 'View Demonstration', demonstration, class: "btn btn-primary",:style=>'color:#FFFFFF' %>
                  </td>
                  
                  </tr>
              <% end %>
              </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
        </div>
      </div>
    </div>
  </div>
</div>

<%= will_paginate%>
