<%= form_for(@application) do |f| %>
  <% if @application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
      <% @application.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :pre_demonstration_id %><br>
    <%= f.number_field :pre_demonstration_id %>
  </div>
  <div class="field">
    <%= f.label :app_area, 'Area of application' %><br>
    <%= f.text_field :app_area %>
  </div>
  <div class="field">
    <%= f.label :app_date %><br>
    <%= f.date_select :app_date %>
  </div>

    <div class="field">
      <%=f.label :products%><br>
      <%=f.collection_check_boxes :product_ids,Product.all,:id, :name, {},{class: "checkbox"}%>
    </div>


    <div class="field">
      <%= f.label :app_type, 'Application Type' %><br>
      <%= f.select :app_type, options_for_select([["Foliar", 'foliar'],["Soil",'soil'],["Drip",'drip'],["Flood",'flood']]),{include_blank: ''} %>
    </div>

  <div class="field">
    <%= f.label :competitor, 'Competitors product' %><br>
    <%= f.text_field :competitor %>
  </div>

  <div class="field">
    <%= f.label :follow_date %><br>
    <%= f.date_select :follow_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
