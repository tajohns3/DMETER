<div class="nested-fields">
  <div class="row">
    <div class="col-md-12">
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          First Name
        </label>
        <%= f.text_field :fname, {class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          Surname
        </label>
        <%= f.text_field :sname, {class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          Middle Name
        </label>
        <%= f.text_field :mname, {class: "form-control"} %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          Designation
        </label>
        <%= f.text_field :designation, {class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          Residential Address
        </label>
        <%= f.text_field :staddress, {class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          Contact Number
        </label>
        <%= f.text_field :phnumber, class: "form-control", id: 'contact_phone', value: number_to_phone(f.object.phnumber), placeholder: "+91-xxxx-xxxxxx" %>
      </div>
    </div>
  </div>
      </div>
    </div>
  <div class="links">
    <%= link_to_remove_association "Remove", f, class: "btn btn-danger pull-right",:style=>'color:#FFFFFF'%>
  </div>
</div>