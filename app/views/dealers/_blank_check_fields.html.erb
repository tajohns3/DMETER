<div class="nested-fields">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label class="required">
              Bank Name
            </label>
            <%= f.text_field :bank_name, {class: "form-control"} %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label class="required">
              Bank Account Number
            </label>
            <%= f.text_field :bank_account, {class: "form-control"} %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label class="required">
              Blank Cheques Received
            </label>
            <%= f.select :blank_check, options_for_select([["1"], ["2"], ["3"],
                                                         ["4"], ["5"]]),
                         {:include_blank => true}, {class: "form-control"}%>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label class="required">
              Cheque Number
            </label>
            <%= f.text_field :cheque_num, {class: "form-control"} %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="links">
    <%= link_to_remove_association "Remove", f, class: "btn btn-danger pull-right",:style=>'color:#FFFFFF'%>
  </div>
</div>