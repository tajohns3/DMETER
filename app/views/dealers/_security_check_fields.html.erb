<div class="nested-fields">
  <div class="row">
    <div class="col-md-12">
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          Bank Name
        </label>
        <%= f.text_field :bank_name, {class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          Bank Account
        </label>
        <%= f.number_field :bank_account, {class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          Cheque Number
        </label>
        <%= f.number_field :check_number, {class: "form-control"} %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          Amount
        </label>
        <%= f.number_field :amount, {class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          Issue Date
        </label>
        <div class='input-group date' id='datetimepicker1'>
          <%= f.text_field :issue_date, "data-provide" => 'datepicker', data: {date_format: 'yyyy-mm-dd'}, class: "form-control" %>
          <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="required">
          Status
        </label>
        <%= f.select :status, options_for_select([["Not Yet Deposited"], ["Deposited - Cleared"], ["Deposited - Bounced"]]),
                     {:include_blank => true}, {class: "form-control"}%>
      </div>
    </div>
  </div>
      </div>
    </div>
  <div class="links">
    <%= link_to_remove_association "Remove", f, class: "btn btn-danger pull-right",:style=>'color:#FFFFFF'%>
  </div>
</div>