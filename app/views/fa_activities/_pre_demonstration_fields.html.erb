
<div class="row">
  <div class="col-md-3">
    <div class="form-group">
      <%= f.label :farmer_id %><br>
      <%= f.collection_select :farmer_id, Farmer.all, :id, :name,{include_blank: ''}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="col-md-3">
    <div class="field">
      <%= f.label :crop_id %><br>
      <%= f.collection_select :crop_id, Crop.all, :id, :crop, {include_blank: ''}, {class: 'form-control'} %>
    </div>
  </div>



  <%= f.hidden_field :fa_activity_id %>


  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :crop_growth %><br>
      <%= f.select :crop_growth, options_for_select([["Soil Preparation",'soil_prep'],["30 - 40 days after sowing / transplanting", '30_40_days_after_sowing_transplant'],
                                                     ["40 - 60 days after sowing / transplanting",'40_60_days_after_sowing_transplant'],
                                                     ["100 - 120 Days after sowing / transplanting",'100_120_days_after_sowing_transplant'],
                                                     ["120 days after sowing / transplanting",'120_days_after_sowing_transplant'],["30 - 40 days before flowering",'30_40_days_before_flowering'],
                                                     ["Before flowering",'before_flowering'],["After flowering",'after_flowering'],["At fruit setting",'fruit_setting'],["After fruit setting",
                                                                                                                                                                         'after_fruit_setting'],["30 - 40 days after pruning", '30_40_days_after_pruning'], ["50 - 60 days after pruning",'50_60_days_after_pruning'],
                                                     ["During vegetative stage",'during_vegetative_stage'],["Immediately after pruning",'immediately_after_pruning'],["20 - 30 days after breaking dormancy",
                                                                                                                                                                      '20_30_days_after_breaking_dormancy'],["After bunch formation",'after_bunch_formation'],["After Flowering - Before Fruit / Grain Setting", 'after_flower_before_fruit_grain_setting'],
                                                     ["At Fruit / Grain Setting", 'at_fruit_grain_setting'],["After Fruit / Grain Setting",'after_fruit_grain_setting'],[" Boll / Bulb / Pod Formation",'boll_pod_formation'],
                                                     ["After Plucking",'after_plucking'],["After 2-3 plucking",'2-3_after_plucking']]), {include_blank: ''}, {class: 'form-control'} %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <div class="field">
      <%= f.label :condition %><br>
      <%= f.select :condition, options_for_select([["Drought", 'drought'],["Flower/Fruit Shedding", 'flower'], ["Healty Growth", 'healthy_growth'], ["Heat Stress",'heat_stress'],
                                                   ["Infestation - Bacterial", 'bacterial_infest'], ["Infestation - Fungal",'fungal_infest'], ["Infestation - Mite", 'mite_infest'],
                                                   ["Infestation - Nematode", 'nematode_infest'],["Infestation - Suck Pest",'suck_pest_infest'], ["Infestation - Viral",'viral_infest'],
                                                   ["Infestation - Other",'other_infest'], ["Leaf Curling", 'leaf_curling'], ["Root Rot",'root_rot'],["Root Wilt", 'root_wilt'],
                                                   ["Salt Stress", 'salt_stress'], ["Water Stress",'water_stress']]), {include_blank: ''}, {class: 'form-control'} %>
    </div>
  </div>




  <%=f.fields_for :applications do |app|%>

        <div class="col-md-3">
          <div class="form-group">
            <%= app.label :app_area, 'Area of application' %><br>
            <%= app.text_field :app_area, class: 'form-control' %>
          </div>
        </div>



        <div class="col-md-3">
          <div class="form-group">
            <%= app.label :app_date, 'Application Date' %><br>
            <%= app.text_field :app_date,"data-provide" => 'datepicker', data: {date_format: 'yyyy-mm-dd'}, class: 'form-control' %>
          </div>
        </div>














        <div class="col-md-3">
          <div class="form-group">
            <%= app.label :follow_date, 'Follow up Date' %><br>
            <%= app.text_field :follow_date,"data-provide" => 'datepicker', data: {date_format: 'yyyy-mm-dd'}, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="row">
      <div class="col-md-2">
        <div class="form-group">
          <%= app.label :app_type, 'Application Type' %><br>
          <%= app.select :app_type, options_for_select([["Foliar", 'foliar'],["Soil",'soil'],["Drip",'drip'],["Flood",'flood']]),{include_blank: ''}, {class: 'form-control'} %>
        </div>
      </div>



        <div class="col-md-5">
          <div class="form-group">
            <%= app.label :competitor, 'Competitors product' %><br>
            <%= app.text_field :competitor, class: 'form-control' %>
          </div>

        </div>
      </div>


        <%=app.fields_for :product_applications do |prod|%>
            <%=render 'product_application_fields', app: prod%>
        <%end%>
        <div class="links">
          <%=link_to_add_association 'Add Product ', app, :product_applications, class: 'btn btn-info', style: "color: #FFFFFF"%>
        </div>

      <br>

<div class="row">
  <div class="col-md-12">




  </div>
</div>
  <%end%>
  <div class="links">
    <%=link_to_add_association 'More Product Application?', f, :applications, class: 'btn btn-info pull-right', style: "color: #FFFFFF"%>
  </div>

<div class="field">
  <%= f.hidden_field :demo_code %>
</div>
