<div class="field">
  <%= f.label :dealer_id %><br>
  <%= f.collection_select :dealer_id, Dealer.all, :id, :name %>
</div>

<div class="field">
  <%= f.label :village_id %><br>
  <%= f.collection_select :village_id, Village.all, :id, :village, {include_blank: ''}%>
</div>


<div class="field">
  <%= f.label :number_farmer, 'Number of farmers Met: '%>
  <%=f.select :number_farmer, (1..10), {include_blank: ''}%>
</div>



<div class="container" id="met_farmers">

    <%=f.fields_for :activity_farmers do |no|%>


              <table><%=no.collection_select :farmer_id, Farmer.all, :id, :name, {include_blank: ''}%></table>


        <%end%>





</div>


<div class="field">
  <%= f.label :purpose %><br>
  <%= f.select :purpose, options_for_select([["Introduction", 'introduction'],["Pre Demonstration",'pre_demonstration'],["Demonstration",'demonstration'],["Post Demonstration", 'post_demonstration'], ["Product Prescription", 'product_prescription'], ["Consultation/Guidance", 'consultation']]),
                  {include_blank: ''}%>
</div>
<div class="field", id="meet_farmer_consultation_div">
  <%= f.label :consultation %><br>
  <%= f.select :consultation, options_for_select([["Soil", 'soil'], ["Growth", 'growth'], ["Yield", 'yield'], ["Infestation", 'infestation'],
                                                     ["Irrigation", 'irrigation'],["Product Usage", 'product_use']]),
                  {include_blank: ''}%>
</div>


<div class="container", id="prod_pres_sele">
  <%=f.fields_for :product_prescriptions do |prod|%>
      <%=render 'product_prescription_fields', f: prod%>
  <%end%>
</div>

