<%= form_for(@fa_activity) do |f| %>
  <% if @fa_activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fa_activity.errors.count, "error") %> prohibited this fa_activity from being saved:</h2>

      <ul>
      <% @fa_activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :field_assistant_id %><br>
    <%= f.number_field :field_assistant_id %>
  </div>
  <div class="field">
    <%= f.label :state_id %><br>
    <%= f.number_field :state_id %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :pocket_id %><br>
    <%= f.number_field :pocket_id %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </div>

    <div class="field">
      <%= f.label :activity %><br>
      <%= f.select :activity, options_for_select([["Meet Farmer(s)", 'meet_farmers'], ["Visit Dealer Shop", 'visit_dealer'], ["Assist Sales Representative", 'assist_sr'],
                                                  ["Met Sales Representative", 'meet_sr'], ["Other", 'misc']]),
                   {include_blank: ''}%>
    </div>

    <div>
      <div id="meet_farm_sele", class="container">

      <%= f.fields_for :meet_farmers do |meet|%>
            <div class="field">
              <%= meet.label :farmer_id %><br>
              <%= meet.number_field :farmer_id %>
            </div>
            <div class="field">
              <%= meet.label :purpose %><br>
              <%= meet.select :purpose, options_for_select([["Introduction", 'introduction'], ["Product Prescription", 'product_prescription'], ["Consultation/Guidance", 'consultation']]),
                           {include_blank: ''}%>
            </div>
            <div class="field", id="meet_farmer_consultation_div">
              <%= meet.label :consultation %><br>
              <%= meet.select :consultation, options_for_select([["Soil", 'soil'], ["Growth", 'growth'], ["Yield", 'yield'], ["Infestation", 'infestation'],
                                                              ["Irrigation", 'irrigation'],["Product Usage", 'product_use']]),
                           {include_blank: ''}%>
            </div>
            <div class="container", id="prod_pres_sele">
             <%=meet.fields_for :product_prescriptions do |prod|%>
                  <div class="field">
                    <%= prod.label :dealer_id %><br>
                    <%= prod.number_field :dealer_id %>
                  </div>
                  <div class="field">
                    <%= prod.label :farmer_id %><br>
                    <%= prod.number_field :farmer_id %>
                  </div>
                  <div class="field">
                    <%= prod.label :crop_id %><br>
                    <%= prod.number_field :crop_id %>
                  </div>

                  <div class="field">
                    <%= prod.label :crop_growth %><br>
                    <%= prod.select :crop_growth, options_for_select([["Soil Preparation",'soil_prep'],["30 - 40 days after sowing / transplanting", '30_40_days_after_sowing_transplant'],
                                                                   ["40 - 60 days after sowing / transplanting",'40_60_days_after_sowing_transplant'],
                                                                   ["100 - 120 Days after sowing / transplanting",'100_120_days_after_sowing_transplant'],
                                                                   ["120 days after sowing / transplanting",'120_days_after_sowing_transplant'],["30 - 40 days before flowering",'30_40_days_before_flowering'],
                                                                   ["Before flowering",'before_flowering'],["After flowering",'after_flowering'],["At fruit setting",'fruit_setting'],["After fruit setting",
                                                                                                                                                                                       'after_fruit_setting'],["30 - 40 days after pruning", '30_40_days_after_pruning'], ["50 - 60 days after pruning",'50_60_days_after_pruning'],
                                                                   ["During vegetative stage",'during_vegetative_stage'],["Immediately after pruning",'immediately_after_pruning'],["20 - 30 days after breaking dormancy",
                                                                                                                                                                                    '20_30_days_after_breaking_dormancy'],["After bunch formation",'after_bunch_formation'],["After Flowering - Before Fruit / Grain Setting", 'after_flower_before_fruit_grain_setting'],
                                                                   ["At Fruit / Grain Setting", 'at_fruit_grain_setting'],["After Fruit / Grain Setting",'after_fruit_grain_setting'],[" Boll / Bulb / Pod Formation",'boll_pod_formation'],
                                                                   ["After Plucking",'after_plucking'],["After 2-3 plucking",'2-3_after_plucking']]),
                                 {include_blank:''}%>
                  </div>
                  <div class="field">
                    <%= prod.label :crop_cond, 'Crop Condition' %><br>
                    <%= prod.select :crop_cond, options_for_select([["Drought", 'drought'],["Flower/Fruit Shedding", 'flower'], ["Healty Growth", 'healthy_growth'], ["Heat Stress",'heat_stress'],
                                                                 ["Infestation - Bacterial", 'bacterial_infest'], ["Infestation - Fungal",'fungal_infest'], ["Infestation - Mite", 'mite_infest'],
                                                                 ["Infestation - Nematode", 'nematode_infest'],["Infestation - Suck Pest",'suck_pest_infest'], ["Infestation - Viral",'viral_infest'],
                                                                 ["Infestation - Other",'other_infest'], ["Leaf Curling", 'leaf_curling'], ["Root Rot",'root_rot'],["Root Wilt", 'root_wilt'],
                                                                 ["Salt Stress", 'salt_stress'], ["Water Stress",'water_stress']]), {include_blank: ''}%>
                  </div>
                  <div class="field">
                    <%= prod.label :acreage %><br>
                    <%= prod.text_field :acreage %> <%=prod.select :units, options_for_select([["Bigha",'bigha'],["Guntha(Ares)",'guntha'],["Acres",'acres'],["Hectares", 'hectares']])%>
                  </div>
                  <div class="field">
                    <%= prod.label :prescribe, 'Prescribed?' %><br>
                    <%= prod.check_box :prescribe %>
                  </div>


                  <%end%>
            </div>


      <%end%>
      </div>
    </div>

  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
