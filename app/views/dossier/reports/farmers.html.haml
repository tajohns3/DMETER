%h2= "Farmer Summary"

= render_options(report)

%table#farmers.display{"data-source" => products_url(format: "json")}
  %thead
    %tr
      - report.results.headers.each do |header|
        %th= report.format_header(header)
  %tbody
    - report.results.body.each do |row|
      %tr
        - row.each do |value|
          %td= value

  - if report.results.footers.any?
    %tfoot
      - report.results.footers.each do |row|
        %tr
          - row.each do |value|
            %th= value

= link_to 'Download CSV', formatted_dossier_report_path('csv', report), class: "btn btn-primary btn-xs"
= link_to 'Download Excel', formatted_dossier_report_path('xls', report), class: "btn btn-primary btn-xs"